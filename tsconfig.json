{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@theme": ["src/theme"],
      "@theme/*": ["src/theme/*"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"]
    },
    "types": [
      "vite/client",
      "node",
      "@testing-library/jest-dom",
    ]
  },
  "include": [
    "src/**/*",
    "packages/*/src/**/*",
    "tests/**/*",
    "types/**/*",
    "*.config.ts",
    "*.config.js",
    "commitlint.config.js",
    "scripts/**/*",
    "configs/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.d.ts",
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**"
  ]
}

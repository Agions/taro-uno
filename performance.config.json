{
  "enabled": true,
  "environment": "production",
  "monitoring": {
    "renderPerformance": {
      "enabled": true,
      "threshold": 16,
      "sampleRate": 1.0,
      "reportInterval": 5000
    },
    "memoryUsage": {
      "enabled": true,
      "threshold": 52428800,
      "sampleRate": 0.1,
      "reportInterval": 10000
    },
    "interactionPerformance": {
      "enabled": true,
      "threshold": 100,
      "sampleRate": 0.5,
      "reportInterval": 5000
    },
    "networkPerformance": {
      "enabled": true,
      "threshold": 3000,
      "sampleRate": 0.3,
      "reportInterval": 15000
    }
  },
  "optimizations": {
    "bundleSplitting": {
      "enabled": true,
      "strategies": ["vendor", "feature", "dynamic"]
    },
    "codeSplitting": {
      "enabled": true,
      "chunkSize": 100000
    },
    "treeShaking": {
      "enabled": true,
      "sideEffects": ["**/*.scss", "**/*.css", "src/components/index.tsx"]
    },
    "caching": {
      "enabled": true,
      "strategies": ["build-cache", "browser-cache", "service-worker"]
    },
    "compression": {
      "enabled": true,
      "algorithms": ["gzip", "brotli"]
    },
    "lazyLoading": {
      "enabled": true,
      "strategies": ["components", "images", "routes"]
    }
  },
  "budgets": {
    "bundle": {
      "maximumSize": "200KB",
      "warningSize": "150KB",
      "errorSize": "250KB"
    },
    "chunks": {
      "maximumSize": "100KB",
      "warningSize": "75KB",
      "errorSize": "125KB"
    },
    "performance": {
      "firstContentfulPaint": 1000,
      "largestContentfulPaint": 2500,
      "cumulativeLayoutShift": 0.1,
      "totalBlockingTime": 300
    }
  },
  "reporting": {
    "enabled": true,
    "providers": ["console", "analytics", "webhook"],
    "levels": {
      "info": {
        "enabled": true,
        "channels": ["console"]
      },
      "warning": {
        "enabled": true,
        "channels": ["console", "analytics"]
      },
      "error": {
        "enabled": true,
        "channels": ["console", "analytics", "webhook"]
      }
    }
  },
  "experiments": {
    "webWorkers": {
      "enabled": false,
      "tasks": ["dataProcessing", "imageOptimization"]
    },
    "serviceWorker": {
      "enabled": true,
      "strategy": "networkFirst",
      "cacheNames": {
        "static": "static-cache-v1",
        "dynamic": "dynamic-cache-v1"
      }
    },
    "pwa": {
      "enabled": true,
      "manifest": {
        "name": "Taro-Uno UI",
        "short_name": "Taro-Uno",
        "theme_color": "#3b82f6",
        "background_color": "#ffffff"
      }
    }
  },
  "integrations": {
    "vite": {
      "enabled": true,
      "plugins": [
        "rollup-plugin-visualizer",
        "vite-plugin-compression",
        "vite-plugin-pwa"
      ]
    },
    "rollup": {
      "enabled": true,
      "plugins": [
        "@rollup/plugin-terser",
        "@rollup/plugin-commonjs"
      ]
    },
    "typescript": {
      "enabled": true,
      "strictMode": true,
      "declaration": true
    }
  },
  "alerts": {
    "enabled": true,
    "channels": ["console", "email", "slack"],
    "rules": [
      {
        "name": "Bundle Size Alert",
        "condition": "bundle.size > budget.bundle.maximumSize",
        "level": "error"
      },
      {
        "name": "Build Time Alert",
        "condition": "build.time > 10000",
        "level": "warning"
      },
      {
        "name": "Memory Usage Alert",
        "condition": "memory.usage > budget.memory.maximumSize",
        "level": "warning"
      },
      {
        "name": "Performance Regression Alert",
        "condition": "performance.score < 80",
        "level": "error"
      }
    ]
  },
  "thresholds": {
    "renderTime": 16,
    "memoryUsage": 52428800,
    "interactionTime": 100,
    "networkRequestTime": 3000,
    "firstContentfulPaint": 1000,
    "largestContentfulPaint": 2500,
    "cumulativeLayoutShift": 0.1,
    "totalBlockingTime": 300,
    "performanceScore": 80
  },
  "customMetrics": {
    "componentRenderTime": {
      "enabled": true,
      "sampling": 0.1
    },
    "userInteractionLatency": {
      "enabled": true,
      "sampling": 0.2
    },
    "resourceLoadTime": {
      "enabled": true,
      "sampling": 0.1
    },
    "bundleLoadTime": {
      "enabled": true,
      "sampling": 1.0
    }
  }
}